[alias]
    c = commit
    ca = commit --amend
    cm = commit -m
    co = checkout
    d = diff
    ds = diff --staged
    l = log --oneline --graph
    s = status

[fetch]
    prune = true

[init]
    defaultBranch = main

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[rebase]
    autoStash = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[include]
    path = user.config
