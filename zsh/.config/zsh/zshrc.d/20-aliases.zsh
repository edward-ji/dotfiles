# ls aliases
alias ls='ls --color'
alias la='ls -a'
alias ll='ls -hl'
alias lla='ls -hla'

# mkdir aliases
alias mkdir='mkdir -pv'

# grep alias auto color
alias grep='grep --color'

# suppress stdout and stderr
alias -g nul='&> /dev/null'
alias -g outnul='> /dev/null'
alias -g errnul='2> /dev/null'

# eza is a fork of unmaintained exa
alias exa='eza'
